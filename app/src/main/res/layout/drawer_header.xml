<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navdrawer_image_height"
    android:background="#344955"
    android:orientation="vertical">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewName"
        android:text=""
        android:layout_marginTop="@dimen/margin_user_name"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/margin_user_layout"
        android:layout_marginStart="@dimen/margin_user_layout"
        android:layout_above="@+id/txtViewEmail"
        android:textColor="@android:color/white"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtViewEmail"
        android:layout_marginBottom="@dimen/margin_user_email"
        android:layout_alignLeft="@+id/txtViewName"
        android:layout_alignParentBottom="true"
        android:text="Inspirational Stories And Quotes"
        android:textColor="@android:color/white"/>

</RelativeLayout>