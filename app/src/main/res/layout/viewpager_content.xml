<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize"

    >
<android.support.v7.widget.CardView
    android:id="@+id/cardViewPager"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:elevation="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardViewPager"
        android:layout_centerHorizontal="true"
        android:id="@+id/relativeLayout">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/circleImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/circleimage"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tvAuthorViewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author"
            android:textSize="16dp"
            android:layout_below="@id/circleImage"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            />
        <TextView
            android:id="@+id/tvRole"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Role"
            android:textSize="16dp"
            android:layout_below="@id/tvAuthorViewPager"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_margin="8dp"
            android:layout_alignLeft="@+id/tvAuthorViewPager"
            android:textColor="#212121"
            android:gravity="center"

            />
        <TextView
            android:id="@+id/tvQuoteViewPager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am Quote"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:layout_below="@+id/tvRole"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="16dp"
            android:lineSpacingMultiplier="1.2"

            />
        <TextView
            android:id="@+id/tvQuoteViewPagerEng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am Quote"
            android:layout_centerHorizontal="true"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_below="@+id/tvQuoteViewPager"
            android:layout_margin="16dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_alignLeft="@+id/tvQuoteViewPager"
            android:textColor="#212121"
            android:lineSpacingMultiplier="1.2"
            />
            <ToggleButton
                android:id="@+id/ToggleButton"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:textOn=""
                android:textOff=""
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="250dp"
                android:layout_marginBottom="32dp"
                />

        <ImageView
            android:id="@+id/share"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/btnshare"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="32dp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>


</RelativeLayout>