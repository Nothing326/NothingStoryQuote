<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.CategoriesOfInterestFragment"
    android:orientation="vertical"
    android:layout_marginTop="?attr/actionBarSize"
    android:weightSum="2"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1"
        >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#ca61918e"
        android:id="@+id/linProvokingQues"
        >
        <TextView
            android:id="@+id/tvProvokingQues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Provoking Thoughts Question"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#212121"
            android:textSize="16dp"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#90f1cc"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#e7e257"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#36c2b2"
            android:id="@+id/luckyQuesLayout"
            >
        <TextView
            android:id="@+id/tvLuckyQues"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#212121"
            android:textSize="16dp"
            />
        </LinearLayout>


    </LinearLayout>
</LinearLayout>
